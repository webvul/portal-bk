<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<!-- to be updated to external dev config -->

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d [%t] %-5p %C{3}.%M(%L) - %m%n" />
		</layout>
	</appender>

	<appender name="file" class="org.apache.log4j.DailyRollingFileAppender" >
		<param name="file" value="/data/log/beehive/beehive.log" />
		<param name="DatePattern" value="'.'yyyy-MM-dd" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d [%t] %-5p %C{3}.%M(%L) - %m%n" />
		</layout>
	</appender>

	<appender name="op-file" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="/data/log/beehive/op-log.csv" />
		<param name="DatePattern" value="'.'yyyy-MM-dd" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyyMMddHHmmss},%m%n" />
		</layout>
	</appender>


	<logger name="com.fasterxml.jackson">
		<level value="info" />
	</logger>

	<logger name="org.apache.http.wire">
		<level value="debug" />
	</logger>

	<logger name="org.springframework.web">
		<level value="debug" />
	</logger>

    <logger name="org.springframework.cache" >
        <level value="debug" />
    </logger>
	
	 <logger name="com.kii.beehive.portal.web.help.OperatorLogInterceptor" >
        <level value="info" />
        <appender-ref ref="op-file" />
    </logger>
	
    <logger name="com.kii" >
        <level value="debug" />
    </logger>

	<root>
		<priority value="info" />
        <appender-ref ref="file" />
	</root>
</log4j:configuration>