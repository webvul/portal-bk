<?xml version="1.0" encoding="UTF-8" ?>
<configuration name="beehive" status="info">

    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout  pattern="%d [%t] %-5p %m - %C{3}.%M(%L)%n" />
        </Console>

        <RollingFile name="file" immediateFlush="false" fileName="/data/log/beehive/beehive.log"  filePattern="${user.home}/.beehive/log/beehive-%d{MM-dd-yyyy}.log">
            <PatternLayout  pattern="%d [%t] %-5p %m - %C{3}.%M(%L)%n" />
            <Policies>
                <TimeBasedTriggeringPolicy />
            </Policies>
        </RollingFile>

        <RollingFile name="op-file" immediateFlush="false" fileName="/data/log/beehive/op-log.csv"  filePattern="${user.home}/.beehive/log/op-log-%d{MM-dd-yyyy}.csv">
            <PatternLayout  pattern="%d{yyyyMMddHHmmss},%m%n" />
            <Policies>
                <TimeBasedTriggeringPolicy />
            </Policies>
        </RollingFile>

    </Appenders>

    <Loggers>

        <Logger name="com.fasterxml.jackson" level="info" />

        <Logger name="org.apache.http.wire" level="debug" />

        <Logger name="org.springframework.web" level="debug" />

        <Logger name="org.springframework.cache" level="debug" />


        <Logger name="com.kii"  level="debug" />

        <Logger name="com.kii.beehive.portal.web.help.OperatorLogInterceptor" level="info">
            <appender-ref ref="op-file" />
        </Logger>

        <Root level="debug">
            <appender-ref ref="file" />
            <appender-ref ref="console" />
        </Root>
    </Loggers>
</configuration>