<?xml version="1.0" encoding="UTF-8" ?>
<configuration name="beehive" status="info">

    <Appenders>
    <Console name="console" target="SYSTEM_OUT">
        <PatternLayout  pattern="%d [%t] %-5p %m - %C{3}.%M(%L)%n" />
    </Console>

    <RollingFile name="file" immediateFlush="false" fileName="${user.home}/.beehive/log/beehive/beehive.log"  filePattern="${user.home}/.beehive/log/beehive-%d{MM-dd-yyyy}.log">
        <PatternLayout  pattern="%d [%t] %-5p %m - %C{3}.%M(%L)%n" />
        <Policies>
            <TimeBasedTriggeringPolicy />
        </Policies>
    </RollingFile>

    </Appenders>

    <Loggers>

        <Logger name="com.fasterxml.jackson" level="info" />

        <Logger name="org.apache.http.wire" level="debug" />

        <Logger name="org.springframework.web" level="debug" />

        <Logger name="org.springframework.cache" level="debug" />


        <Logger name="com.kii"  level="debug" />

        <Root level="info">
            <appender-ref ref="file" />
            <appender-ref ref="console" />
        </Root>
    </Loggers>
</configuration>