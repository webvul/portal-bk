<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
         http://www.springframework.org/schema/beans/spring-beans.xsd
         http://www.springframework.org/schema/context
         http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config/>

    <context:component-scan base-package="com.kii.beehive.portal" />


    <bean class="com.kii.extension.factory.KiiCloudSDKConfig" />

    <bean id="appBindAspect"  class="com.kii.beehive.portal.aop.AppBindAspect" />

    <bean class="com.kii.extension.sdk.service.DevPortalService" >
        <property name="devPortalUrl"  value="${beehive.kiicloud.dev-portal.url}" />
    </bean>

    <bean   class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
            <property name="locations" value="classpath:com/kii/beehive/portal/web/config.${spring.profile}.properties"/>
        </bean>

        <bean class="com.kii.extension.factory.LocalPropertyBindTool" >
            <property name="propFileName" value="classpath:com/kii/beehive/portal/web/beehive.portal.store.${spring.profile}.properties" />
        </bean>

        <bean id="log4jInitializer" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean" >
            <property name="targetClass" value="org.springframework.util.Log4jConfigurer" />
            <property name="targetMethod" value="initLogging" />
            <property name="arguments">
                <list>
                    <value>classpath:com/kii/beehive/portal/web/log4j.${spring.profile}.xml</value>
                </list>
            </property>
    </bean>

</beans>